<div class="container">
  <h2>Sign up</h2>

  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :役割 %><br/>
    <td><%= f.label :若者 %>
      <%= f.radio_button :role, :young %></td>
    <td><%= f.label :おっちゃん %>
      <%= f.radio_button :role, :occhan %></td>
  </div>

  <div class="field">
    <%= f.label :居住地 %>
    <%= f.select :prefecture_code, User.prefecture_codes.keys, {prompt: '選択してください'}, class: 'form-control btn btn-info' %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= image_tag(@user.icon.url) if @user.icon.url %>
    <%= f.file_field :icon, id: :user_icon %>
  </div>

  <div class="field">
    <%= f.text_field :profile, autofocus: true %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>
        characters minimum)</em>
    <% end %><br/>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-success' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
