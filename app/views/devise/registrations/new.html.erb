<div class="container">
  <h2>サインイン</h2>

  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, label: "名前" %>
  </div>

  <div class="field">
    <%= f.label :役割 %><br/>
    <%= f.label :若者 %>
    <%= f.radio_button :role, :young %>
    <%= f.label :おっちゃん %>
    <%= f.radio_button :role, :occhan %>
  </div>

  <div class="field">
    <%= f.select :prefecture_code, User.prefecture_codes.keys, {prompt: '選択してください'}, class: 'form-control btn btn-info' %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= image_tag(@user.icon.url) if @user.icon.url %>
    <%= f.file_field :icon, id: :user_icon, label: "プロフィールアイコン" %>
  </div>

  <div class="field">
    <%= f.text_field :profile, autofocus: true, label: "プロフィール" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password" %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
  </div>
  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "サインイン", class: 'btn btn-success' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
