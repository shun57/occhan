<table class="table table-hover">
  <thead>
    <h2>メッセージ一覧</h2>
  </thead>
  <tbody>
    <% @conversations.each do |conversation| %>
      <td>
        <% if conversation.target_user(current_user).present? %>
          メッセージ：<%= link_to conversation.target_user(current_user).name, conversation_messages_path(conversation), class:"btn btn-danger", style:"color:white;"%>
          <%= link_to "プロフィール", user_path(conversation.target_user(current_user).id)%>
        <% end %>
      </td>
    <% end %>
  </tbody>
</table>
